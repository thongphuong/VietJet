@using DAL.Entities
@using DAL.Repositories
@using DAL.UnitOfWork
@using TMS.Core.App_GlobalResources
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section breadcrumb{
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"><i class="fa fa-graduation-cap"></i> ScheduleDaily Management - @Resource.lblCourseList</h1>
            <ol class="breadcrumb">
                <li><a href="/">@Resource.lblHome</a></li>
                <li>ScheduleDaily Management</li>
                <li class="active">@Resource.lblCourseList</li>
            </ol>
        </div>
    </div>
}

<div class="row">
    <div class="col-md-12">
        <div class="panel list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                <h1 class="panel-title list-panel-title">
                    <i class="fas fa-list-ul font-small-byhoa" aria-hidden="true"></i>  @Resource.lblCourseList
                </h1>
            </div>
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table id="Trainee" class="table table-striped table-bordered">
                    <thead>
                        <tr role="row">
                            <th style="width:5%;">@Resource.lblStt</th>
                            <th class="dt-left" style="width:8%;">@Resource.lblCourseCode</th>
                            <th>@Resource.lblSubjectName</th>
                            <th>@Resource.lblDateFrom</th>
                            <th>@Resource.lblRoom</th>
                            <th>@Resource.lblDuration</th>
                            <th>@Resource.lblRemark</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                    <tbody role="alert" aria-live="polite" aria-relevant="all"></tbody>
                </table>
            </div>
        </div>
    </div>
    
</div>
<!-- Modal -->

<style>
    select {
        color: #000 !important;
    }

    .bootstrap-timepicker-widget table td input {
        min-width: 55px;
        margin: 0;
        text-align: center;
    }

    #tableProgram td {
        border: 0;
    }

    .mysymbol {
        font-size: 16px;
        color: green;
    }
</style>

@section Scripts{
    <script type="text/javascript">
    var sTable;
    var customRow = [       
        {
            "targets":5,
            "className": "text-center",
        }
    ];
    sTable = initDataTable("#Trainee", "/ScheduleDaily/AjaxHandler", customRow);
    //datatable serverside
    </script>
}

