                                    </div>
                                    <div>
                                        <br />
                                        <label>@Resource.lblContent: </label>
                                        @Html.ValidationSummary(true)
                                        @Html.TextAreaFor(model => model.Notification.MessageContent, new { id = "txt_Content", @class = "form-control", @rows = "7" })
