@model TMS.Core.ViewModels.Subjects.SubjectScoreViewModel
@using TMS.Core.App_GlobalResources

<div class="modal fade" id="modal-editor" role="dialog">
    <div class="modal-dialog modal-md">
        @using (Html.BeginForm("AddScore", "Subjects", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.Id)
            <div class="modal-content">
                <div class="modal-header">
                    <div class="panel-heading list-panel-heading">
                        <h5 class="modal-title panel-title list-panel-title" id="modal-header"> @Resource.lblSubjectScore</h5>
                    </div>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <div class="col-md-12 control-label">
                            <label>@Resource.lblGrade</label> <span class="text-danger">(*)</span>
                        </div>
                        <div class="col-md-12">
                            @Html.TextBoxFor(m => m.Grade, new { @class = "form-control", placeholder = @Resource.lblGrade })
                            @Html.ValidationMessageFor(m => m.Grade, null, new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12 control-label">
                            <label>@Resource.lblPoint</label> <span class="text-danger">(*)</span>
                        </div>
                        <div class="col-md-12">
                            @Html.TextBoxFor(m => m.Point, new { @class = "form-control", placeholder = @Resource.lblPoint })
                            @Html.ValidationMessageFor(m => m.Point, null, new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12 text-right">
                            @{
                                if (User.IsInRole("/Subjects/AddScore"))
                                {
                                    <input type="submit" class="btn btn-primary" value="@Resource.lblSubmit" />
                                }
                            }
                            <button type="button" class="btn btn-secondary btn-default" data-dismiss="modal">@Resource.lblCancel</button>
                        </div>
                    </div>
                </div>
            </div>
                                }
    </div>
</div>
