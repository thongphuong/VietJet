@model CAT_CONTRACTOR
@{
    int id = ViewBag.id;
    var mModel = Model;
}


<div class="panel panel-danger list-panel" id="list-panel">
    <div class="panel-heading list-panel-heading">
        <h1 class="panel-title list-panel-title"><i class="fas fa-pencil-alt font-small-byhoa" aria-hidden="true"></i> Edit </h1>
    </div>
    <div class="panel-body center-block">

        @using (Html.BeginForm("Modify", "Contractor", FormMethod.Post, new { id = "createform" }))
        {

            <input type="hidden" id="hd_id" name="id" value="@id" />
            <div class="form-group col-lg-12">
                <label>Code <font color="red">(*)</font></label>
                <input type="text" name="str_Code" value="@mModel.str_Code" data-parsley-required-message="Required Fields" required class="form-control">
            </div>
            <div class="form-group col-lg-12">
                <label>Sort Name <font color="red">(*)</font></label>
                <input type="text" name="str_Sortname" value="@mModel.str_Sortname" class="form-control">
            </div>
            <div class="form-group col-lg-12">
                <label>Full Name <font color="red">(*)</font></label>
                <input type="text" name="str_Fullname" value="@mModel.str_Fullname" class="form-control">
            </div>
            <div class="form-group col-lg-12">
                <label>Address </label>
                <input type="text" name="str_address" value="@mModel.str_address" class="form-control">
            </div>
            <div class="form-group col-lg-12">
                <label>Tax Code </label>
                <input type="text" name="str_masothue" value="@mModel.str_masothue" class="form-control">
            </div>
                <div class="form-group col-lg-12">
                    <label>Description </label>
                    @Html.TextArea("str_Description", mModel.str_Description, new { @class = "form-control" })

                </div>

                <div class="divider"></div>
                <div class="divider"></div>
                <div class="form-group col-lg-12">
                    <div id="messageout">
                    </div>
                </div>
                <div class="pull-right pad10R">
                    @*@{
                        if (CMSUtils.Is_Edit("/Contractor/Index")) // neu co
                        {*@
                    <a class="btn btn-md btn-danger min-width-100" onclick="submit()">Update</a>
                    <a href="javascript:void(0)" onclick="active(0,'create')" class="btn btn-md btn-danger min-width-100">Cancel</a>
                    @*}*@
                    }
                </div>
        }
    </div>
</div>
