@model CAT_CONTRACTOR
@{
    int id = ViewBag.id;
    var mModel = Model;
    TrainingCenterDBEntities db = new TrainingCenterDBEntities();


}


<div class="panel panel-danger list-panel" id="list-panel">
    <div class="panel-heading list-panel-heading">
        <h1 class="panel-title list-panel-title"> Detail </h1>
    </div>
    <div class="panel-body center-block">
        <form autocomplete="on" action="@Url.Action("Modify", "Contractor")" method="post" id="UserModify" data-parsley-validate>
            <input type="hidden" id="hd_id" name="id" value="@id" />

            <div class="form-group col-lg-12">
                <label>Code </label>
                <input type="text" name="str_Code" disabled value="@mModel.str_Code" data-parsley-required-message="Required Fields" required class="form-control">
            </div>
            <div class="form-group col-lg-12">
                <label>Sort Name </label>
                <input type="text" name="str_Sortname" disabled value="@mModel.str_Sortname" class="form-control">
            </div>
            <div class="form-group col-lg-12">
                <label>Full Name </label>
                <input type="text" name="str_Fullname" disabled value="@mModel.str_Fullname" class="form-control">
            </div>
            <div class="form-group col-lg-12">
                <label>Address </label>
                <input type="text" name="str_address" disabled value="@mModel.str_address" class="form-control">
            </div>
            <div class="form-group col-lg-12">
                <label>Tax Code </label>
                <input type="text" name="str_masothue" disabled value="@mModel.str_masothue" class="form-control">
            </div>
            <div class="form-group col-lg-12">
                <label>Description </label>
                @Html.TextArea("str_Description", mModel.str_Description, new { @class = "form-control", disabled="true" })
                
              
            </div>
            <div class="divider"></div>
            <div class="divider"></div>
            <div class="pull-right pad10R">
                <a href="javascript:void(0)" onclick="active(0,'create')" class="btn btn-md btn-danger min-width-100">Cancel</a>
            </div>
        </form>
    </div>
</div>