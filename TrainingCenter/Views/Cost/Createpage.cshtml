@model TMS.Core.ViewModels.Cost.CostModel


<div class="panel panel-primary list-panel" id="list-panel">
    <div class="panel-heading list-panel-heading">
        <h1 class="panel-title list-panel-title"> Create </h1>
    </div>
    <div class="panel-body center-block">

        @using (Html.BeginForm("Modify", "Cost", FormMethod.Post, new { id = "createform" }))
        {
            @*@Html.HiddenFor(m => m.Id)*@
            @*<input type="hidden" id="hd_id" name="id" value="@id" />*@
            <div class="form-group col-lg-12">
                <label>Code <font color="red">(*)</font></label>
                @Html.TextBoxFor(m => m.Code , new {id = "txtCode" , @class = "form-control" , placeholder = "Cost Code"})
                @Html.ValidationMessageFor(m => m.Code , null , new { @class = "text-danger"})
                @*<input type="text" name="str_Code" value="@mModel.str_Code" data-parsley-required-message="Required Fields" required class="form-control">*@
            </div>
                <div class="form-group col-lg-12">
                    <label>Cost Name <font color="red">(*)</font></label>
                    @Html.TextBoxFor(m => m.Name, new { id = "txtName", @class = "form-control", placeholder = "Cost Name" })
                    @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
                    @*<input type="text" name="str_Name" value="@mModel.str_Name" class="form-control">*@
                </div>
                <div class="form-group col-lg-12">
                    <label>Description </label>
                    @Html.TextAreaFor(m => m.Description, 6, 40, new { id = "txtDescription", @class = "form-control", placeholder = "Cost Description" })
                    @Html.ValidationMessageFor(m => m.Description, null, new { @class = "text-danger" })
                    @*<textarea rows="7" class="form-control" value="@mModel.str_Description" name="str_Description"></textarea>*@
                </div>

                <div class="divider"></div>
                <div class="divider"></div>
                <div class="form-group col-lg-12">
                    <div id="messageout">
                    </div>
                </div>
                <div class="pull-right pad10R">
                   @*{
                       if (CMSUtils.Is_Add("/Cost/Index")) // neu co
                       {*@
                        <a class="btn btn-md btn-primary min-width-100" onclick="submit()">Create</a>
                       @*}
                }*@

                </div>
        }
    </div>
</div>
