@using TMS.Core.Utils
@using TMS.Core.ViewModels.Common
@using TMS.Core.App_GlobalResources
@model TMS.Core.ViewModels.UserModels.UserModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
@{
    var staticData = TempData[UtilConstants.NotifyMessageName];
    var staticMessage = (AjaxResponseViewModel)staticData;
}
<style>
    .btn {
        border-radius: 0px
    }

    .form-control {
        border-radius: 0px;
    }
</style>
<div class="form-login">
    <form action="@Url.Action("Index","Authenticate")" method="post" style="width: 95%; margin: 0 auto; ">
        <div class="text-left">
            <img src="@ViewBag.PrivateLogoLogin" style="max-width: 35%;max-height: 100px;" />
        </div>
        <div class="text-left" style="margin-bottom: -5px;">
            <div class="icon-object border-slate-300 text-slate-300"><i class="icon-reading"></i></div>
            <h2 class="content-group form-title" id="title-login">@Resource.lblLoginToYourAccount </h2>
            @if (staticMessage != null)
            {
                <div class="alert @(staticMessage.result ? "alert-info" : "alert-danger")" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    @staticMessage.message
                </div>
            }
        </div>
        <div class="form-group has-feedback has-feedback-left" id="div-username">
            <input type="text" class="form-control" name="Username" required placeholder="@Resource.lblUserName">
            <div class="form-control-feedback">
                <i class="icon-user text-muted"></i>
            </div>
        </div>
        <div class="form-group has-feedback has-feedback-left" id="div-password">
            <input type="password" class="form-control" name="Password" required placeholder="@Resource.lblPassword">
            <div class="form-control-feedback">
                <i class="icon-lock2 text-muted"></i>
            </div>
        </div>
        <div class="text-right small"><b><a href="/Authenticate/ForgotPass">@Resource.lblForgotPassword?</a></b></div>

        @*Button Login bằng SSO*@
        @*<div @*class="text-right small"*@ @* class="form-group" style="margin-top: 10px;text-align:right;">
                <b><a class="btn btn-primary " href="javascript:void(0)" onclick="displayLogin()">Login SSO <i class="icon-circle-right2 position-right"></i></a></b>
            </div>*@

        <br />
        <div class="form-group" style="text-align:right;" id="div-submit">
            <button type="submit" class="btn btn-primary ">@Resource.lblLogin<i class="icon-circle-right2 position-right"></i></button>
        </div>

    </form>
</div>

<div class="content-wrapper" style="display:none;">
    <!-- Simple login form -->
    <!-- /simple login form -->
</div>
