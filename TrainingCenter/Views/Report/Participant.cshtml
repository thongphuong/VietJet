                            <tr role="row">
                                <th>@Resource.lblNo</th>
                                <th>@Resource.lblCourseCode</th>
                                <th>@Resource.lblCourseName</th>
                                <th>@Resource.lblFrom</th>
                                <th>@Resource.lblTo</th>
