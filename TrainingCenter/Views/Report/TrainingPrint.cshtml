<div class="col-sm-12 text-center">
    <table width="100%" border="1">
        <tr>
            <td width="20%">
                <div class="col-sm-12 text-center">
                    <img src="~/Content/img/logo.png" style="width: 80%;margin-top: 12px;" />
                </div>
            </td>
            <td colspan="1">
                <div class="col-sm-12 text-center">
                    <h2 class="header-title">TRAINING ACTIVITY REPORT</h2>
                </div>
            </td>
            <td width="20%">
    <div class="col-sm-12 text-right pull-right">
     FORM: VJC-VTC-F-010 <br />
            ISS 01/REV 02<br />
            1/1/2017
                </div>
            </td>
        </tr>
    </table>
</div>
<div class="col-sm-12 text-center">
    <table width="100%" border="1">
        <tr>
            <th rowspan="1" class="text-center">@Resource.lblStt</th>
            <th rowspan="1" class="text-center">Code</th>
            <th colspan="1" class="text-center">Name</th>
            <th colspan="1" class="text-center">Type of Training</th>
            <th rowspan="1" class="text-center">From</th>
            <th rowspan="1" class="text-center">To</th>
            <th rowspan="1" class="text-center">Paticipants</th>
            <th rowspan="1" class="text-center">Distintion</th>
            <th rowspan="1" class="text-center">Pass</th>
            <th rowspan="1" class="text-center">Nbr of certi. issued</th>
        </tr>
        @foreach (var item in Model.CourseRps)
        {
            count ++;
            <tr>
                <td class="text-center">@(count)</td>
                <td class="text-center">@item.CourseCode</td>
                <td class="text-left">@item.CourseName</td>
                <td class="text-center">@item.TypeOfTraining</td>
                <td class="text-center">@item.DateFrom</td>
                <td class="text-center">@item.DateTo</td>
                <td class="text-center">@item.Participants</td>
                <td class="text-center">@item.Distinction</td>
                <td class="text-center">@item.Pass</td>
                <td class="text-center">@item.Certificate</td>
            </tr>
        }
    </table>
</div>

<div class="col-sm-12 text-right pull-right">Records: @count</div>
