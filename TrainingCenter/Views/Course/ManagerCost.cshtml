
@using TMS.Core.App_GlobalResources
@{
    ViewBag.Title = "ManagerCost";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@section breadcrumb{

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"><i class="fa fa-graduation-cap"></i>  @Resource.lblCourseManagement - @Resource.lblCoursesCost</h1>
            <ol class="breadcrumb">
                <li><a href="/">@Resource.lblHome</a></li>
                <li>@Resource.lblCourseManagement</li>
                <li class="active">@Resource.lblCoursesCost</li>
            </ol>
        </div>
    </div>
}

<div class="row">
    <div class="col-md-12">
        <div class="panel list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                <h1 class="panel-title list-panel-title"><i class="fas fa-list-ul font-small-byhoa" aria-hidden="true"></i> @Resource.lblCoursesCost</h1>
            </div>
            <div class="panel-body table-responsive">
                <div id="panel-search" class="collapse panel">
                    <form action="/Course/AjaxHandlerManagerCost" id="frmFilter" >
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-2 form-group">
                                    <input type="text" id="Code" name="Code" class="form-control frmFilter" placeholder="@Resource.lblCourseCode" />
                                </div>
                                <div class="col-md-4 form-group">
                                    <input type="text" id="Name" name="Name" class="form-control frmFilter" placeholder="@Resource.lblCourseName" />
                                </div>
                                <div class="col-md-3">
                                    <button type="submit" class="btn btn-primary " id="btFilter">
                                        <i class="fa fa-search"></i> @Resource.lblSearch
                                    </button>
                                </div>
                                <div class="col-md-3 text-right form-group">
                                   
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <p class="pull-right" data-toggle="collapse" data-target="#panel-search" style="cursor:pointer;" id="call-panel-search"><i class="fa fa-search"></i> @Messege.Search</p>

                <table id="Course" class="table table-striped table-bordered" style="width: 100%">
                    <thead>
                    <tr role="row">
                            <th>@Resource.lblNo</th>
                            <th>@Resource.lblCourseCode</th>
                            <th>@Resource.lblCourseName</th>
                            <th>@Resource.lblCost</th>
                            <th>@Resource.lblTOTAL</th>
                            <th>@Resource.lblOptions</th>
                    </thead>
                    <tbody></tbody>
                    <tbody role="alert" aria-live="polite" aria-relevant="all"></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts{

    <script type="text/javascript">
        var table;
        $(document).ready(function() {
            $("#frmFilter").submit(function (e) {
                table.draw();
                e.preventDefault();
            });
            var customRow = [
                { "targets": 3, "className": "text-right" },
                { "targets": 4, "className": "text-right" },
                { "targets": 5, "sortable": false },
                {
                    "targets": 5,
                    "className": "text-center",
                }
            ];
            table = initDataTable("#Course", "/Course/AjaxHandlerManagerCost", customRow);
        });


        $(".line_6").addClass("active");
    </script>
}
