@using TMS.Core.App_GlobalResources

@model TMS.Core.ViewModels.ViewModel.UserChangePassword
@{
    ViewBag.Title = "ChangePass";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@section breadcrumb{
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"><i class="fas fa-exchange-alt"></i> @Resource.lblChangePassword</h1>
            <ol class="breadcrumb">
                <li><a href="/">@Resource.lblHome</a></li>
                <li class="active">@Resource.lblChangePassword</li>
            </ol>
        </div>
    </div>
}

<div class="row">
    <div class="col-md-12">
        <div class="panel list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                <h1 class="panel-title list-panel-title">@Resource.lblChangePassword</h1>
            </div>
            <form class="form-horizontal bordered-row" action="@Url.Action("ChangePass", "User")" method="post" id="changepass" data-parsley-validate>
                <div class="panel-body">
                    <div class="alert alert-warning">
                        <p><font color="black"> @Resource.lblNote : @Resource.lblCheckPass.</font></p>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">@Resource.lblOldPass</label>
                                <div class="col-sm-4">
                                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", id = "editor-Name", placeholder = @Resource.lblOldPass })
                                    @Html.ValidationMessageFor(m => m.OldPassword, null, new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">@Resource.lblNewPass</label>
                                <div class="col-sm-4">
                                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", id = "editor-Name", placeholder = @Resource.lblNewPass })
                                    @Html.ValidationMessageFor(m => m.NewPassword, null, new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">@Resource.USER_COMFRIMPASS</label>
                                <div class="col-sm-4">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", id = "editor-Name", placeholder = @Resource.USER_COMFRIMPASS })
                                    @Html.ValidationMessageFor(m => m.ConfirmPassword, null, new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="pull-right">
                        <button type="submit" class="btn btn-primary" id="sub"><i class="fas fa-save" aria-hidden="true"></i> @Resource.lblSave</button>
                    </div>
                    <div class="clear"></div>
                </div>
            </form>
        </div>
    </div>
</div>